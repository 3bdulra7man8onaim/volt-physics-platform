# منصة الفولت في الفيزياء - إعدادات البيئة
# تطوير: Abdulrahman Ghonaim

# إعدادات التطبيق
REACT_APP_NAME="منصة الفولت في الفيزياء"
REACT_APP_VERSION="1.0.0"
REACT_APP_DESCRIPTION="أفضل منصة تعليمية للفيزياء مع مستر السيد محمد"

# إعدادات API
REACT_APP_API_URL="https://api.volt-physics.com"
REACT_APP_API_VERSION="v1"
REACT_APP_API_TIMEOUT="10000"

# إعدادات قاعدة البيانات
DB_HOST="localhost"
DB_PORT="3306"
DB_NAME="volt_physics"
DB_USER="volt_user"
DB_PASSWORD="your_secure_password"

# إعدادات الأمان
JWT_SECRET="your_jwt_secret_key_here"
JWT_EXPIRES_IN="7d"
BCRYPT_ROUNDS="12"

# إعدادات البريد الإلكتروني
MAIL_HOST="smtp.gmail.com"
MAIL_PORT="587"
MAIL_USER="noreply@volt-physics.com"
MAIL_PASSWORD="your_email_password"
MAIL_FROM="منصة الفولت <noreply@volt-physics.com>"

# إعدادات التخزين السحابي
AWS_ACCESS_KEY_ID="your_aws_access_key"
AWS_SECRET_ACCESS_KEY="your_aws_secret_key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="volt-physics-storage"

# إعدادات الدفع
STRIPE_PUBLIC_KEY="pk_test_your_stripe_public_key"
STRIPE_SECRET_KEY="sk_test_your_stripe_secret_key"
PAYPAL_CLIENT_ID="your_paypal_client_id"

# إعدادات التحليلات
GOOGLE_ANALYTICS_ID="GA_MEASUREMENT_ID"
FACEBOOK_PIXEL_ID="your_facebook_pixel_id"

# إعدادات الفيديو
FFMPEG_PATH="/usr/bin/ffmpeg"
VIDEO_QUALITY="720p"
VIDEO_BITRATE="2000k"

# إعدادات الإشعارات
FIREBASE_API_KEY="your_firebase_api_key"
FIREBASE_PROJECT_ID="volt-physics-app"
FIREBASE_MESSAGING_SENDER_ID="your_sender_id"

# إعدادات التطوير
NODE_ENV="development"
PORT="3000"
DEBUG="true"

# إعدادات الإنتاج
PRODUCTION_URL="https://volt-physics.com"
CDN_URL="https://cdn.volt-physics.com"
SENTRY_DSN="your_sentry_dsn_for_error_tracking"

# إعدادات التخزين المؤقت
REDIS_HOST="localhost"
REDIS_PORT="6379"
REDIS_PASSWORD="your_redis_password"
CACHE_TTL="3600"

# إعدادات الجلسات المباشرة
ZOOM_API_KEY="your_zoom_api_key"
ZOOM_API_SECRET="your_zoom_api_secret"
WEBRTC_STUN_SERVER="stun:stun.l.google.com:19302"

# إعدادات النسخ الاحتياطي
BACKUP_SCHEDULE="0 2 * * *"
BACKUP_RETENTION_DAYS="30"
BACKUP_S3_BUCKET="volt-physics-backups"